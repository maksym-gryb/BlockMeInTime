<Window x:Class="BlockMeInTime.BlockDetailsQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockMeInTime"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DayLengthQuestion" Height="80" Width="300" Background="Black" Foreground="White"
        KeyDown="OnKeyDownHandler"
        FocusManager.FocusedElement="{Binding ElementName=inputField}">
    <Grid>
        <TextBlock Margin="4,3,237,10">Activity:</TextBlock>
        <TextBox Name="inputField" Margin="62,3,18,4" VerticalAlignment="Center" FontSize="12" Height="44"></TextBox>
    </Grid>
</Window>
