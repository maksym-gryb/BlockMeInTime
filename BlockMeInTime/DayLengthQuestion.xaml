<Window x:Class="BlockMeInTime.DayLengthQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockMeInTime"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DayLengthQuestion" Height="80" Width="300" Background="Black" Foreground="White"
        KeyDown="OnKeyDownHandler">
    <Grid>
        <TextBlock Margin="3,10,0,0">How long are your days (in hours)?:</TextBlock>
        <TextBox Name="inputField" PreviewTextInput="NumberValidationTextBox" Margin="211,6,41,10" VerticalAlignment="Center" FontSize="20" Height="35">14</TextBox>
    </Grid>
</Window>
